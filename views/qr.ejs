<%- include("./partials/header.ejs") %>

<main class="container d-flex justify-content-center align-items-center" style="height: 700px;">

    <% if(locals.qr_data) { %>
        <div class="d-flex justify-content-center align-items-center flex-column mt-5">
            <img src="<%= qr_data %>" />
            <p> <%= qrlink %> </p>
            <a href="<%= qr_data %>" class="btn btn-info text-white" download>Download  
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-download mb-1 ms-1" viewBox="0 0 16 16">
                    <path d="M.5 9.9a.5.5 0 0 1 .5.5v2.5a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-2.5a.5.5 0 0 1 1 0v2.5a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2v-2.5a.5.5 0 0 1 .5-.5"/>
                    <path d="M7.646 11.854a.5.5 0 0 0 .708 0l3-3a.5.5 0 0 0-.708-.708L8.5 10.293V1.5a.5.5 0 0 0-1 0v8.793L5.354 8.146a.5.5 0 1 0-.708.708z"/>
                </svg>
            </a>
            <br />
            <a href="/" class="btn btn-info text-white">Generate Another
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-clockwise" style="margin-bottom: 2px;" viewBox="0 0 16 16">
                    <path fill-rule="evenodd" d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2z"/>
                    <path d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466"/>
                </svg>
            </a>
        </div>
    <% } else { %>
        <p>something is broken</p>
    <% } %>

</main>

<%- include("./partials/footer.ejs") %>